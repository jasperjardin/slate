{
	"name": "Slate",
	"version": "0.0.1",
	"repository": "git@github.com:jasperjardin/slate.git",
	"author": "Jasper Jardin",
	"private": true,
	"type": "module",
	"scripts": {
		"setup": "composer install & npm install",
		"phpcs": "composer phpcs",
		"phpcbf": "composer phpcbf",
		"phpcs-target": "composer phpcs $*",
		"phpcbf-target": "composer phpcbf $*",
		"composer:update": "composer update",
		"composer:dump-autoload": "composer dump-autoload -o",
		"composer:require-dev": "composer require-dev",
		"composer:require": "composer require",
		"composer:remove": "composer remove",
		"composer:remove-dev": "composer remove-dev",
		"composer:remove-plugin": "composer remove-plugin",
		"composer:remove-package": "composer remove-package",
		"composer:remove-package-dev": "composer remove-package-dev",
		"css-vars": "gulp css-vars",
		"stylelint": "stylelint ./**/assets/css/**/*.scss",
		"eslint": "eslint ./**/assets/js/**/*.ts ./**/assets/js/**/*.tsx",
		"stylelint:fix": "stylelint --fix ./**/assets/css/**/*.scss",
		"eslint:fix": "eslint --fix ./**/assets/js/**/*.ts ./**/assets/js/**/*.tsx",
		"test": "composer phpcs & npm run eslint & npm run tsc & npm run css-vars && npm run stylelint",
		"build": "gulp",
		"build:prod": "gulp --prod",
		"watch": "gulp watch",
		"icons": "gulp icons",
		"styles": "gulp styles",
		"scripts": "gulp scripts",
		"serve": "gulp serve",
		"block-add": "gulp block-add",
		"component-add": "gulp component-add",
		"tsc": "tsc --noemit",
		"dev": "npm run build && npm run serve",
		"changelog:major": "changelog -M",
		"changelog:minor": "changelog -m",
		"changelog:patch": "changelog -p"
	},
