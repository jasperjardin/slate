		"del": "^6.1.1",
		"dotenv": "^16.0.1",
		"event-stream": "^4.0.1",
		"glob": "^8.0.3",
		"gulp": "^5.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-sass": "^6.0.0",
		"gulp-svgicons2svgfont": "^7.0.2",
		"gulp-template": "^5.0.0",
